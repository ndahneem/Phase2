<%= form_with(model: camp_instructor, local: true) do |form| %>
  <% if camp_instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(camp_instructor.errors.count, "error") %> prohibited this camp_instructor from being saved:</h2>

      <ul>
      <% camp_instructor.errors.full_messages.each do |message| %>
