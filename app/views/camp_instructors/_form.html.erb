  <div class="field">
    <%= form.label :instructor_id %>
    <!--<%= form.number_field :instructor_id, id: :camp_instructor_instructor_id %>-->
    <%= form.collection_select :instructor_id, Instructor.alphabetical.active.all, :id, :name, :prompt => "Select Instructor..." %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>
