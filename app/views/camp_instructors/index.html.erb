<p id="notice"><%= notice %></p>

<h1>Camp Instructors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Camp</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @camp_instructors.each do |camp_instructor| %>
      <tr>
        <td><%= camp_instructor.camp.name %></td>
        <td><%= camp_instructor.instructor.name %></td>
        <td><%= link_to 'Show', camp_instructor %></td>
        <td><%= link_to 'Edit', edit_camp_instructor_path(camp_instructor) %></td>
        <td><%= link_to 'Destroy', camp_instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

