<%= form_with(model: camp, local: true) do |form| %>
  <% if camp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(camp.errors.count, "error") %> prohibited this camp from being saved:</h2>

      <ul>
      <% camp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container" style="color: #82613c">
     
      <div class="field">
        <%= form.label :curriculum_id %>
        <%= form.collection_select :curriculum_id, Curriculum.alphabetical.active.all, :id, :name, :prompt => "Select Curriculum..." %>
        
      </div>
      
      

      
      <div class="field">
        <%= form.label :location_id %>
        <%= form.collection_select :location_id, Location.alphabetical.active.all, :id, :name, :prompt => "Select Location..." %>
      </div>
    
      <div class="field">
        <%= form.label :cost %>
        <%= form.text_field :cost, id: :camp_cost %>
      </div>
    
      <div class="field">
        <%= form.label :start_date %>
        <%= form.date_select :start_date, id: :camp_start_date %>
      </div>
    
      <div class="field">
        <%= form.label :end_date %>
        <%= form.date_select :end_date, id: :camp_end_date %>
      </div>
    
      <div class="field">
        <%= form.label :time_slot %>
        <%= form.text_field :time_slot, id: :camp_time_slot %>
      </div>
    
      <div class="field">
        <%= form.label :max_students %>
        <%= form.number_field :max_students, id: :camp_max_students %>
      </div>
    
      <div class="field">
        <%= form.label :active %>
        <%= form.check_box :active, id: :camp_active %>
      </div>
    
      <div class="actions">
        <%= form.submit %>
      </div>
        
        
  </div>
<% end %>

